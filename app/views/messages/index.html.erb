<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li><%= link_to "New", new_message_path %></li>
        <li class="active"><%= link_to "Inbox", messages_path %></li>
        <li><a href="#">Sent</a></li>
        <li><a href="#">Trash</a></li>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

      <h2 class="sub-header">Inbox</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>From</th>
              <th>Title</th>
              <th>Urgent</th>
              <th>Read</th>
            </tr>
          </thead>
          <tbody>
            <% @messages.each do |message|%>

            <a href="#">
            <tr>
              <td>message.email</td>
              <td><%=link_to message.title, message_path(message.id) %></td>
              <td><%=link_to message.urgent, message_path(message.id) %></td>
              <td><%=link_to message.read, message_path(message.id) %></td>
            </tr>
            </a>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
