<br>
<form class="text-center col-md-12">
  <div class="row">
    <div class="col-md-12"><%= render "shared/morse_bot" %></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Forgot your password?</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <br>
    <div class="row">
      <div class="col-md-12"><%= f.label :username %></div>
    </div>
    <div class="row">
      <div class="col-md-12"><%= f.text_field :username, autofocus: true %></div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-12"><%= f.submit "Send me reset password instructions", class: "btn btn-default" %></div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-12">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</form>
