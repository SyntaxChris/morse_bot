<br>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">

    <div class="row text-center">
      <%= render 'shared/morse_bot' %>
    </div>

    <div class="panel panel-default">

      <div class="panel-heading">
        <h1 class="panel-title text-center">Sign up</h1>
      </div>
        <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <div class="form-group col-xs-10 col-xs-offset-1">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control", autofocus: true %>
          </div>
          <div class="form-group col-xs-10 col-xs-offset-1">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control", autocomplete: true %>
          </div>
          <div class="form-group col-xs-10 col-xs-offset-1">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
          <div class="form-group col-xs-10 col-xs-offset-1">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
          </div>
          <div class="form-group">
            <div class="form-group text-center">
              <span><%= f.submit "Sign up", class: "btn btn-default" %></span>
        <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
    </div>
  </div>
  </div>
</div>
